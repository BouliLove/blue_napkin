{
  "manifest_version": 3,
  "name": "BlueNapkin",
  "version": "1.0.0",
  "description": "A quick calculator with Excel-like formulas - accessible from your browser toolbar",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "BlueNapkin Calculator"
  },
  "permissions": [
    "storage"
  ]
}
